<form action="/users/register" method='POST' class="container">
  <h1>Register</h1>
  {{> message}}
  <div class="input-row">
    <input type="text" name='userName' id='userName' autocomplete="on" value='{{userName}}' required>
    <label for="userName" class='input-label'>
      <span class='label-content'><i class="fas fa-user"></i>User Name</span>
    </label>
  </div>

  <div class="input-row">
    <input type="text" name='email' id='email' autocomplete="on" value='{{email}}' required>
    <label for="email" class='input-label'>
      <span class='label-content'><i class="fas fa-envelope"></i>Email</span>
    </label>
  </div>
  <div class="input-row">
    <input type="password" name='password' id='password' autocomplete="on" value='{{password}}' required>
    <label for="password" class='input-label'>
      <span class='label-content'><i class="fas fa-lock"></i>Password</span>
    </label>
  </div>
  <div class="input-row">
    <input type="password" name='checkPassword' id='checkPassword' autocomplete="on" value='{{checkPassword}}' required>
    <label for="checkPassword" class='input-label'>
      <span class='label-content'><i class="fas fa-lock"></i>Check Password</span>
    </label>
  </div>
  <button class="login-btn" type="submit">Register</button>
  <a href='/auth/facebook' class="login-btn facebook-btn">Continue with Facebook</a>
  <p>Have An Account ? <a class='login-link' href="/">Login</a></p>
  <p class="privacy">By clicking Register you agree to our <a target="_blank" rel="noreferrer noopener" class="login-link" href="https://www.privacypolicies.com/live/f4134fa5-9a11-4284-b98a-94539a23686e">Privacy Policy</a></p>
</form>